<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_card_view"
        android:layout_margin="@dimen/margin_card_view"
        app:cardBackgroundColor="@color/white">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tCompetitionName"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                tools:text="Champions League"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tVenueName"
                android:textColor="@color/gray"
                android:layout_marginStart="8dp"
                tools:text="Stamford Bridge"
                app:layout_constraintTop_toBottomOf="@+id/tCompetitionName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/tHomeTeam"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tMatchDateTime"
                android:textColor="@color/gray"
                android:layout_marginStart="8dp"
                android:layout_marginTop="18dp"
                tools:text="Sep 12, 2017 at 20:00"
                app:layout_constraintStart_toEndOf="@+id/tDiv"
                app:layout_constraintTop_toBottomOf="@+id/tCompetitionName"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tHomeTeam"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                style="@style/TeamStyleText"
                tools:text="Chelsea FC"
                app:layout_constraintTop_toBottomOf="@+id/tVenueName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/tAwayTeam"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tAwayTeam"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                tools:text="Qarabag"
                style="@style/TeamStyleText"
                app:layout_constraintTop_toBottomOf="@+id/tHomeTeam"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tDate"
                android:layout_marginEnd="32dp"
                android:textSize="24sp"
                android:textColor="@color/black"
                tools:text="12"
                app:layout_constraintBottom_toTopOf="@+id/tDay"
                app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tDay"
                android:textColor="@color/black"
                android:layout_marginBottom="24dp"
                android:layout_marginEnd="32dp"
                tools:text="TUE"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
                android:layout_width="7dp"
                android:layout_height="wrap_content"
                android:id="@+id/tDiv"
                android:text=" | "
                android:textColor="@color/gray"
                android:layout_marginStart="8dp"
                android:layout_marginTop="18dp"
                app:layout_constraintStart_toEndOf="@+id/tVenueName"
                app:layout_constraintTop_toBottomOf="@+id/tCompetitionName"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tPostponed"
                android:text=" POSTPONED "
                android:textColor="@color/white"
                android:background="@color/red"
                android:textStyle="bold"
                android:visibility="invisible"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
